<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="jem" method="upgrade">
	<name>JEM - Mailer Plugin</name>
	<creationDate>11 April 2011</creationDate>
	<author>JEM Community</author>
	<authorEmail>info@joomlaeventmanager.net</authorEmail>
	<authorUrl>http://www.joomlaeventmanager.net</authorUrl>
	<copyright>Copyright (C) 2013-2013 joomlaeventmanager.net</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.9</version>
	<description>JEM Mailer Plugin.</description>

	<files>
		<filename plugin="mailer">mailer.php</filename>
	</files>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_jem_mailer.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field type="radio" name="reg_mail_user" label="PLG_JEM_MAILER_USER_REG" default="1" description="PLG_JEM_MAILER_USER_REG_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field type="radio" name="reg_mail_admin" label="PLG_JEM_MAILER_ADMIN_REG" default="0" description="PLG_JEM_MAILER_ADMIN_REG_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field type="radio" name="reg_mail_user_onoff" label="PLG_JEM_MAILER_SETTINGS_USER_REG_ONOFF" default="1" description="PLG_JEM_MAILER_SETTINGS_USER_REG_ONOFF_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field type="radio" name="reg_mail_admin_onoff" label="PLG_JEM_MAILER_SETTINGS_ADMIN_REG_ONOFF" default="0" description="PLG_JEM_MAILER_SETTINGS_ADMIN_REG_ONOFF_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field type="radio" name="unreg_mail_user" label="PLG_JEM_MAILER_USER_UNREG" default="1" description="PLG_JEM_MAILER_USER_UNREG_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field type="radio" name="unreg_mail_admin" label="PLG_JEM_MAILER_ADMIN_UNREG" default="0" description="PLG_JEM_MAILER_ADMIN_UNREG_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field type="radio" name="newevent_mail_user" label="PLG_JEM_MAILER_USER_NEW_EVENT" default="0" description="PLG_JEM_MAILER_USER_NEW_EVENT_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field type="radio" name="newevent_mail_admin" label="PLG_JEM_MAILER_ADMIN_NEW_EVENT" default="0" description="PLG_JEM_MAILER_ADMIN_NEW_EVENT_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
					<field type="radio" name="editevent_mail_user" label="PLG_JEM_MAILER_USER_EDIT_EVENT" default="0" description="PLG_JEM_MAILER_USER_EDIT_EVENT_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field type="radio" name="editevent_mail_admin" label="PLG_JEM_MAILER_ADMIN_EDIT_EVENT" default="0" description="PLG_JEM_MAILER_ADMIN_EDIT_EVENT_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
					<field type="radio" name="newvenue_mail_user" label="PLG_JEM_MAILER_USER_NEW_VENUE" default="0" description="PLG_JEM_MAILER_USER_NEW_VENUE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field type="radio" name="newvenue_mail_admin" label="PLG_JEM_MAILER_ADMIN_NEW_VENUE" default="0" description="PLG_JEM_MAILER_ADMIN_NEW_VENUE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
					<field type="radio" name="editvenue_mail_user" label="PLG_JEM_MAILER_USER_EDIT_VENUE" default="0" description="PLG_JEM_MAILER_USER_EDIT_VENUE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field type="radio" name="editvenue_mail_admin" label="PLG_JEM_MAILER_ADMIN_EDIT_VENUE" default="0" description="PLG_JEM_MAILER_ADMIN_EDIT_VENUE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field type="radio" name="fetch_admin_mails" label="PLG_JEM_MAILER_ALL_ADMINS" default="0" description="PLG_JEM_MAILER_ALL_ADMINS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field type="text" name="receivers" label="PLG_JEM_MAILER_ADDITIONAL_MAIL_RECEIVERS" default="" description="PLG_JEM_MAILER_ADDITIONAL_MAIL_RECEIVERS_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
